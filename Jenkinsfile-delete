pipeline {
    agent any
    environment{
       // AWS_DEFAULT_REGION="ap-northeast-2"
        AWS_DEFAULT_REGION="ca-central-1"
    }
    parameters{
        choice(name: 'CHOICE', choices: ['Instance', 'Cluster', 'Both'], description: 'Pick something')
    }
    triggers {
        cron('58 10 * * *')
    }
    stages {
        stage('Example') {
            steps {
                echo "Database Global Cluster is: ${GL_CLUSTER_NAME}"
                echo "Database Cluster is: ${DB_CLUSTER}"
                echo "Database Instance is: ${INST_NAME}"
            }
        }
        stage('Python Script') {
            when{
                expression { params.CHOICE == 'Cluster' }
                }
            steps {
                withCredentials([aws(credentialsId: "760451896171", accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh 'python3 delete-cluster.py delete ${GL_CLUSTER_NAME} ${DB_CLUSTER} ${INST_NAME}'   
                }
            }
        }
    }
}
